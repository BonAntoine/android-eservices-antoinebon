<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/char_details_icon_imageview"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>

    <TextView
        android:id="@+id/char_details_name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Character's name"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_details_icon_imageview" />

    <TextView
        android:id="@+id/char_details_species_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="species"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_details_name_textview" />

    <TextView
        android:id="@+id/char_details_gender_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="gender"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_details_species_textview" />

    <TextView
        android:id="@+id/char_details_status_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="The character is "
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_details_gender_textview" />

    <TextView
        android:id="@+id/char_details_status_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="not available"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/char_details_status_title"
        app:layout_constraintTop_toBottomOf="@+id/char_details_gender_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>