<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/char_icon_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/char_name_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Character name"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/char_icon_imageview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/char_species_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="species"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/char_icon_imageview"
            app:layout_constraintTop_toBottomOf="@+id/char_name_textview" />

        <TextView
            android:id="@+id/char_gender_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="gender"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/char_icon_imageview"
            app:layout_constraintTop_toBottomOf="@+id/char_species_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>